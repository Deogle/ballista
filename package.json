    "lighthouse": "^10.0.1",
    "vite": "^4.4.6"
  },
  "bin": {
    "ballista": "dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Deogle/ballista.git"
  },
  "bugs": {
    "url": "https://github.com/Deogle/ballista/issues"
  },
  "homepage": "https://github.com/Deogle/ballista#readme",
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "^5.1.6"
  }
